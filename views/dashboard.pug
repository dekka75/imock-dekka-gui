extends layout

block content
    each group, groupIndex in servicesList
        section(id='scroll-tab-' + groupIndex, class= groupIndex==active ? 'is-active' : '').mdl-layout__tab-panel
            .mdl-grid
                .dashboard-service.mdl-cell.mdl-cell--6-col.dashboard-hide
                    .mdl-shadow--16dp
                each card, i in group
                    - var color = card.color == '1' ? 'mdl-color--accent' : 'mdl-color--primary'
                    - var real = card.real == '1' ? 'swap_horiz' : 'autorenew'
                    .mdl-cell.mdl-cell--3-col
                        .dashboard-card.mdl-card.mdl-shadow--8dp
                            .dashboard-title.mdl-card__title.mdl-shadow--2dp.mdl-color-text--white(class= color)
                                h2.mdl-card__title-text #{card.campaign}
                            .dashboard-menu.mdl-card__menu
                                button.mdl-button.dashboard-js-mode.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect.mdl-color-text--white
                                    i.material-icons #{real}
                            .dashboard-sub-title.mdl-card__title
                                h5.mdl-card__title-text #{card.designation}
                            .dashboard-body.mdl-card__supporting-text
                                span.dashboard-label <strong>Service:</strong>
                                span.dashboard-text #{card.outbound} - #{card.name}
                                span.dashboard-label <strong>Producers:</strong>
                                span.dashboard-text(id=groupIndex + '-producer' + i) #{card.producer}
                                    .mdl-tooltip(for=groupIndex + '-producer' + i) #{card.producer}
                                span.dashboard-label <strong>Path:</strong>
                                span.dashboard-text(id=groupIndex + '-path' + i) #{card.path}
                                    .mdl-tooltip(for=groupIndex + '-path' + i)  #{card.path}
                            .dashboard-button.mdl-card__actions.mdl-card--border
                                a.mdl-button.mdl-button--raised.mdl-js-button.mdl-js-ripple-effect.mdl-button--accent(class= color)
                                    | View Exchange
                                .mdl-layout-spacer
                                button.dashboard-js-settings.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon
                                    i.material-icons settings
